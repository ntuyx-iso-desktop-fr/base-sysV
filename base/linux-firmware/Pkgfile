description="The linux kernel firmware set of files. More and more hardware requires this package"
packager="tnut <tnut@nutyx.org>"

makedepends=(git)

name=linux-firmware
version=20190903


build() {
git clone git://git.kernel.org/pub/scm/linux/kernel/git/firmware/linux-firmware.git \
firmware
for i in $(find firmware -name '*.c' \
-or -name '*.h' \
-or -name '*.asm' \
-or -name 'Makefile' \
-or -name 'configure' \
-or -name '*.S' \
-or -name "README" \
-or -name '*.pl' \
-or -name '*.pst' \
-or -name '*.txt'); do rm -rv $i; done

find firmware \( -type d -and -empty \) | xargs rm -rv
rm -rvf firmware/cis/src
rm -rvf firmware/usbdux
rm -rvf firmware/carl9170fw
rm -rvf firmware/.git

mkdir $PKG/lib
cp -a firmware $PKG/lib

}
