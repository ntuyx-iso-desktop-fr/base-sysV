# Depends on: qtbase mesa pcre2

description="A cross-platform application and UI framework, QtDeclarative files"
url="http://qt-project.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=qtdeclarative 
version=5.11.2

_name="${name}-everywhere-src"

source=(https://download.qt.io/official_releases/qt/5.11/$version/submodules/${_name}-${version}.tar.xz)

build() {
cd ${_name}-${version}
qmake
make
make INSTALL_ROOT=$PKG install

mkdir -p $PKG/usr/bin
for file in $PKG/usr/bin/qt/*; do
  ln -sv /usr/bin/qt/$(basename $file) $PKG/usr/bin/$(basename $file)
done

# Drop QMAKE_PRL_BUILD_DIR because reference the build dir
  find "$PKG/usr/lib" -type f -name '*.prl' \
       -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}
